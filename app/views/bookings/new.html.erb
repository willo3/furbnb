<%# flatpickr installation proces %>


<div class="container">
<h2>Please, book your Charming critter:</h2>

<%= form_with model: Booking.new, authenticity_token: true do |f| %>
<%# f.input :start_time, input_html: { class: 'flatpickr' } %>
<%# f.input :end_time, input_html: { class: 'flatpickr' } %>
  <%= f.text_field :start_time,
    data: {
      controller: "flatpickr",
      flatpickr_date_format: "Y-m-d",
      flatpickr_min_date: Time.zone.now
    } %>
    <%= f.text_field :end_time,
    data: {
      controller: "flatpickr",
      flatpickr_date_format: "Y-m-d",
      flatpickr_min_date: Time.zone.now
    } %>
<% end %>
</div>
